pipeline {
    agent any
    tools {
        maven 'maven' // Ensure 'maven' matches the Maven installation name in Jenkins
    }
    stages {
        stage("Build JAR") {
            steps {
                script {
                    echo "Building the application..."
                    sh 'mvn package'
                }
            }
        }

        stage("Build Docker Image") {
            steps {
                script {
                    echo "Building the Docker image..."
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-repo', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                        sh 'docker build -t m0hamedemam/demo-app:jma-2.0 .'
                        sh "echo $PASS | docker login -u $USER --password-stdin"
                        sh 'docker push m0hamedemam/demo-app:jma-2.0'
                        sh 'docker buildx build -t m0hamedemam/demo-app:jma-2.0 .'
                    }
                }
            }
        }

        stage("Deploy") {
            steps {
                script {
                    echo "Deploying the application..."
                    // Add deployment steps here (e.g., Kubernetes deployment, Docker container run, etc.)
                }
            }
        }
    }
}
